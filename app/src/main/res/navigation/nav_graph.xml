<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/splashFragment">

    <fragment
            android:id="@+id/splashFragment"
            android:name="online.z0lk1n.android.handnotes.ui.splash.SplashFragment"
            android:label="SplashFragment"
            tools:layout="@layout/fragment_splash">
        <action
                android:id="@+id/toMainFragment"
                app:destination="@id/mainFragment"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/mainFragment"
            android:name="online.z0lk1n.android.handnotes.ui.main.MainFragment"
            android:label="fragment_main"
            tools:layout="@layout/fragment_main">
        <action
                android:id="@+id/toNoteFragment"
                app:destination="@id/noteFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
        <action
                android:id="@+id/toSplashFragment"
                app:destination="@id/splashFragment"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true"/>
    </fragment>

    <fragment
            android:id="@+id/noteFragment"
            android:name="online.z0lk1n.android.handnotes.ui.note.NoteFragment"
            android:label="fragment_note"
            tools:layout="@layout/fragment_note">
        <argument
                android:name="@string/note_id"
                app:argType="string"
                app:nullable="true"/>
    </fragment>

</navigation>